{
  "name": "nmp",
  "version": "2.0.0",
  "description": "NodeJS Global Mentoring Program",
  "main": "index.js",
  "engines": {
    "node": ">=14.16.0"
  },
  "type": "module",
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "scripts": {
    "module2_task1": "nodemon --exec babel-node ./module_2/task1",
    "module2_task2": "nodemon --exec babel-node ./module_2/task2",
    "module3": "nodemon --experimental-json-modules ./module_3/main.js",

    "module4_migration&&seed": "npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "module4": "nodemon --experimental-json-modules ./module_4/main.js",

    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --fix --ext .js .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexanderSirash/nmp.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AlexanderSirash/nmp/issues"
  },
  "homepage": "https://github.com/AlexanderSirash/nmp#readme",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/node": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "eslint": "^7.22.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^5.2.0",
    "nodemon": "^2.0.7"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "csvtojson": "^2.0.10",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "joi": "^17.4.0",
    "joi-password-complexity": "^5.1.0",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.6.2",
    "uuid": "^8.3.2"
  }
}
